FROM ruby:3.1.1-alpine

RUN apk add --update --no-cache \
      binutils-gold \
      build-base \
      curl \
      file \
      g++ \
      gcc \
      git \
      less \
      libstdc++ \
      libffi-dev \
      libc-dev \ 
      linux-headers \
      libxml2-dev \
      libxslt-dev \
      libgcrypt-dev \
      make \
      netcat-openbsd \
      nodejs \
      openssl \
      pkgconfig \
      postgresql-dev \
      tzdata \
      yarn 


WORKDIR /api

COPY Gemfile Gemfile.lock /api/

RUN bundle check || bundle install 

COPY . /api


ENTRYPOINT ["/api/entrypoint.sh"]